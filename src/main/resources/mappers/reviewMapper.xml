<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.sksalstn.spring.ex.mybatis.Repository.ReviewRepository">
 
 	<select id="selectReview" parameterType="int"
 	resultType="com.sksalstn.spring.ex.mybatis.domain.Review">
 		SELECT
 			`id`
 			, `storeId`
 			, `menu`
 			, `userName`
 			, `point`
 			, review`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`new_review`
 		WHERE	
 		 	`id` = #{id}		
 	
 	</select>
 
 </mapper>